<div class="all-hero-unit category-hero-unit">
  <div class="container text-center hero-container">
    <a href="/coffee">
      <h1><%= @location %></h1>
    </a>
  </div>
</div>
<div class="container-fluid">
  <div class="category-list">
    <%= render partial: "shared/category_imgs" %>
  </div>
  <% @properties.each do |property| %>
    <div class="row">
      <div class="col-xs-12 category-name">
        <h2><%= category.name %></h2>
      </div>
    </div>
    <div class="aligncenter divider">-</div>
    <div class="row">
      <% category.active_products.each do |product| %>
        <div class="col-xs-12 col-sm-6 col-md-4 product-div">
          <div class="row sm-product-row product-row">
            <div class="col-xs-12" id="<%= product.id %>-index">
              <%= link_to image_tag(product.image.url(:show), class: "img-responsive product-image"), product_path(product.id), id: "#{product.id}-product-image" %>
              <div class="sm-product-info">
                <h4><%= link_to product.name, product_path(product.id), id: "#{product.id}-product" %></h4>
                <p><%= product.description %></p>
              </div>
            </div>
            <div class="product-info">
              <h4><%= link_to product.name, product_path(product.id), id: "#{product.id}-product" %></h4>
              <p><%= product.description %></p>
            </div>
          </div>
          <div class="row xs-product-row product-row">
            <div class="col-xs-6">
              <%= link_to image_tag(product.image.url(:show), class: "img-responsive"), product_path(product.id), id: "#{product.id}-product-image" %>
              <div class="sm-product-info">
                <h4><%= link_to product.name, product_path(product.id), id: "#{product.id}-product" %></h4>
                <p><%= product.description %></p>
              </div>
            </div>
            <div class="product-info">
              <h4><%= link_to product.name, product_path(product.id), id: "#{product.id}-product" %></h4>
              <p><%= product.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <%= render partial: "shared/featured_products" %>
</div>
<%= render partial: "shared/mailing_list" %>

