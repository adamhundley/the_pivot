<div class="property-index-hero-unit">
  <div class="container text-center hero-container">
    <h1></h1>
  </div>
</div>
<% if @location %>
  <div class="well well-sm" id='location-display'>
    <h2><strong><%= @location %></strong></h2>
  </div>
<% end %>
<div class="well well-lg">
  
  $('.slider').slider()

  <div class="slider slider-horizontal" style="width: 414px;">
    <div class="slider-track">
      <div class="slider-selection" style="left: 6.565656565656566%; width: 69.1919191919192%;"></div>
      <div class="slider-handle round" style="left: 6.565656565656566%;"></div>
      <div class="slider-handle round" style="left: 75.75757575757576%;"></div></div>
      <div class="tooltip top in" style="top: -40px; left: 142.4090909090909px;">
        <div class="tooltip-arrow"></div><div class="tooltip-inner">75 : 760</div></div>
        <input type="text" class="span2" value="" data-slider-min="10" data-slider-max="1000" data-slider-step="5" data-slider-value="[250,450]" id="sl2" style=""></div>

  <input type="text" class="span2" value="" data-slider-min="-20" data-slider-max="20" data-slider-step="1" data-slider-value="-14" data-slider-orientation="vertical" data-slider-selection="after"data-slider-tooltip="hide">

  Filter by price interval: <b>$ 10</b> <input id="ex2" type="text" class="span2" value="" data-slider-min="10"
  data-slider-max="1000" data-slider-step="5" data-slider-value="[250,450]"/> <b>$ 1000</b>
</div>

<div class="container text-center" id="location">
  <% @properties.each do |property| %>
    <div class="col-sm-6">
      <h2><%= property.title %></h2>
      <div class="row property-price">
        <span class="property-index-price">$<%= property.price %></span>
      </div>
        <%= link_to image_tag(property.images.first.image.url(:show)), user_property_path(property.user.slug, property.id) %>
        <%= %><br><br>
      <div class="row">
        <div class="col-sm-2 col-sm-offset-2">
          <span class="glyphicon glyphicon-home index-icon" aria-hidden="true"></span>
        </div>
        <div class="col-sm-2">
          <span class="glyphicon glyphicon-bed index-icon" aria-hidden="true"></span>
        </div>
        <div class="col-sm-2">
          <span class="glyphicon glyphicon-tint index-icon" aria-hidden="true"></span>
        </div>
        <div class="col-sm-2">
          <span class="glyphicon glyphicon-user index-icon" aria-hidden="true"></span>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-2 col-sm-offset-2">
        <h5 class="property-stat-description"><%= property.property_type.name if property.property_type %></h5  >
        </div>
        <div class="col-sm-2">
        <h5 class="property-stat-description"><%= property.bedrooms %> Bedrooms</h5 >
        </div>
        <div class="col-sm-2">
        <h5 class="property-stat-description"><%= property.bathrooms %> Bathrooms</h5 >
        </div>
        <div class="col-sm-2">
        <h5 class="property-stat-description"><%= property.sleeps %> Guests</h5 >
        </div>
      </div>
    <hr>
  </div>
  <% end %>
</div>
</div>
