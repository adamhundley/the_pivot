<div class="property-show-hero-unit">
  <div class="container text-center hero-container">
  </div>
</div>
<div class="container">
      <div class="row">
      <div class="col-sm-8 text-center">
        <br>
        <%= image_tag("http://placehold.it/600x400")%>
        <br><br>
        <div class="row">
          <div class="col-sm-3">
            <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
          </div>
          <div class="col-sm-3">
            <span class="glyphicon glyphicon-bed" aria-hidden="true"></span>
          </div>
          <div class="col-sm-3">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
          </div>
          <div class="col-sm-3">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-3">
          <h5 class="property-stat-description"><%= @property.property_type.name %></h5  >
          </div>
          <div class="col-sm-3">
          <h5 class="property-stat-description"><%= @property.bedrooms %> Bedrooms</h5 >
          </div>
          <div class="col-sm-3">
          <h5 class="property-stat-description"><%= @property.bathrooms %> Bathrooms</h5 >
          </div>
          <div class="col-sm-3  ">
          <h5 class="property-stat-description"><%= @property.sleeps %> Guests</h5 >
          </div>
        </div>
      </div>

      <div class="col-sm-4">
        <h2><%= @property.title %></h2>
        <br>
        <p>
          <%= @property.description %>
        </p>
        <hr>
        <h3>Loctation</h3>
        <%= @property.street %><br>
          <% if @property.unit %>
            <%= @property.unit %><br>
          <% end %>
        <%= @property.city %>, <%= @property.state %>  <%= @property.zip %>
        <hr>
        <h4>UPDATE DATES HERE</h4>
        Price per night: <%= @property.price %><br>
        <h4>Reservation Total: $<%= @property.price %></h4>
        <%= render partial: "shared/checkout_form", locals: {amount: @property.price } %>
      </div>
      <hr>
    </div>
</div>

<% @property.images.each do |image| %>
<%= image_tag(image.image.url(:show), class:"admin-product-image") %>
<% end %><br>
