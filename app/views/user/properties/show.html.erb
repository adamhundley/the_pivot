<div class="property-show-hero-unit">
  <div class="container text-center hero-container">
  </div>
</div>
<div class="container">
      <div class="row">
        <h2><%= @property.title %></h2>

      <div class="col-sm-8 text-center">
        <br>
        <%= image_tag(@property.images.first.image.url(:show))%>
        <br><br>
        <div class="row">
          <div class="col-sm-3">
            <span class="glyphicon glyphicon-home show-icon" aria-hidden="true"></span>
          </div>
          <div class="col-sm-3">
            <span class="glyphicon glyphicon-bed show-icon" aria-hidden="true"></span>
          </div>
          <div class="col-sm-3">
            <span class="glyphicon glyphicon-tint show-icon" aria-hidden="true"></span>
          </div>
          <div class="col-sm-3">
            <span class="glyphicon glyphicon-user show-icon" aria-hidden="true"></span>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-3">
          <h5 class="property-stat-description"><%= @property.property_type.name %></h5  >
          </div>
          <div class="col-sm-3">
          <h5 class="property-stat-description"><%= @property.bedrooms %> Bedrooms</h5 >
          </div>
          <div class="col-sm-3">
          <h5 class="property-stat-description"><%= @property.bathrooms %> Bathrooms</h5 >
          </div>
          <div class="col-sm-3  ">
          <h5 class="property-stat-description"><%= @property.sleeps %> Guests</h5 >
          </div>
        </div>
        <h5>Amenities: <% @property.amenities.each do |amenity| %>
          * <%= amenity.name %>
        <% end %></h5>
        <p>
          <%= @property.description %>
        </p>
      </div>
      <br>
      <div class="col-sm-4">
        <div class="row">
          <%= month_calendar do |date| %>
            <% if @property.nights_reserved.include?(date) %>
              <span class="date-booked"><%= "X" %></span>
            <% else %>
            <%= date.day %>
            <% end %>
          <% end %>
        </div>
          <h5>Check in/Check out</h5>
          <!-- <%= form_tag do %> -->
            <div class="input-group">
              <input type="text" class="form-control" name="checkin" id="checkin" selected="ok" placeholder=<%= session[:checkin] %>>
              <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
              <input type="text" class="form-control" name="checkout" id="checkout" placeholder=<%= session[:checkout] %>>
              <span class="input-group-addon" style="padding-right: 8px"><i class="glyphicon glyphicon-calendar"></i></span>
              <input type="submit" value="Update Dates" class="btn btn-checkout btn-sm">
            </div>
        <!-- <% end %> -->
           </div>

        <h3>Loctation</h3>
        <%= @property.street %><br>
          <% if @property.unit %>
            <%= @property.unit %><br>
          <% end %>
        <%= @property.city %>, <%= @property.state %>  <%= @property.zip %>
        <hr>
        <% if session[:checkin] && session[:checkout] %>
          <h5>$<%= @property.price %> per night x <%= @property.possible_nights(session[:checkin], session[:checkout]) %> nights</h5>
          <h4>Reservation Total: $<%= @property.cost(session[:checkin], session[:checkout]) %></h4>
          <%= render partial: "shared/checkout_form", locals: {amount: @property.cost(session[:checkin], session[:checkout]) } %>
        <% else %>
          $<%= @property.price  %>
        <% end %>
      </div>
      <hr>
    </div>
</div>
<div class="container">
  <% @property.images.each do |image| %>
  <div class="col-sm-3">
    <%= image_tag(image.image.url(:index), class:"admin-product-image") %>
  </div>
  <% end %><br>
</div>

<hr>
